{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.1.0.json",
  "width": 650,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/chiachinggg/FIT3179-Assignment-2-MOMA/main/DATASET/top10_countries.csv"
  },
  "params": [
    {
      "name": "Top_n_countries",
      "value": 5,
      "bind": {
        "input": "range",
        "min": 1,
        "max": 10,
        "step": 1,
        "name": "Top n countries: "
      }
    }
  ],
  "transform": [
    {
      "sort": [{"field": "ArtworkCount", "order": "descending"}],
      "window": [{"op": "rank", "as": "rank"}],
      "groupby": ["Period"]
    },
    {"filter": "datum.rank <= Top_n_countries"}
  ],
  "encoding": {
    "x": {
      "field": "Period",
      "type": "nominal",
      "sort": [
        "Abstract  Expressionism",
        "Contemporary Art",
        "Cubism/Futurism",
        "Dada/Surrealism",
        "Pop Art/Minimalism",
        "Postmodernism/Y2K Resurgence",
        "Realism/Impressionism",
        "Romanticism"
      ],
      "axis": {"labelAngle": -90, "labelFontSize": 11, "titleFontSize": 11},
      "title": "Period"
    },
    "y": {
      "field": "rank",
      "type": "quantitative",
      "sort": "descending",
      "scale": {"domain": [0.5, {"expr": "Top_n_countries+0.5"}]},
      "axis": {
        "labelAngle": 0,
        "labelFontSize": 11,
        "tickMinStep": 1,
        "tickCount": {"expr": "Top_n_countries"},
        "titleFontSize": 11
      },
      "title": "Ranking based on Number of Artworks"
    },
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Period", "type": "ordinal"},
      {
        "field": "ArtworkCount",
        "type": "quantitative",
        "title": "Number of Artworks"
      }
    ]
  },
  "layer": [
    {
      "mark": {"type": "line", "interpolate": "monotone"},
      "encoding": {
        "color": {
          "field": "Country",
          "scale": {
            "domain": [
              "Spain",
              "United States of America",
              "United Kingdom",
              "France",
              "Czechia",
              "Mexico",
              "Italy",
              "Norway",
              "Canada",
              "Belgium",
              "Germany",
              "Russia",
              "Japan",
              "Ivory Coast",
              "Argentina",
              "Venezuela",
              "Latvia",
              "Netherlands",
              "Austria",
              "Brazil"
            ],
            "range": [
              "#1f78b4",
              "#005a32",
              "#ff7f00",
              "#6a3d9a",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada",
              "#dadada"
            ]
          }
        },
        "size": {
          "condition": {"param": "sel_country", "empty": false, "value": 5},
          "value": 1
        }
      }
    },
    {
      "params": [
        {
          "name": "sel_country",
          "select": {"type": "point", "on": "click", "fields": ["Country"]},
          "bind": "legend"
        }
      ],
      "mark": {"type": "tick", "thickness": 5},
      "encoding": {
        "color": {
          "condition": {
            "param": "sel_country",
            "empty": false,
            "value": "darkgrey"
          },
          "field": "Country",
          "title": ["Country", ""]
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "fontWeight": "bold",
        "fontSize": 11,
        "baseline": "bottom",
        "align": "left",
        "dx": -20,
        "dy": -8
      },
      "encoding": {
        "text": {"value": "United Kingdom is the best performing country."},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum.Country == 'United Kingdom' && datum.Period == 'Contemporary Art'",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "fontWeight": "bold",
        "fontSize": 11,
        "baseline": "bottom",
        "align": "left",
        "dx": -107,
        "dy": -8
      },
      "encoding": {
        "text": {"value": "France is at a close second."},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum.Country == 'France' && datum.Period == 'Abstract Expressionism'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {}
}